<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="30dp"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        tools:context=".MainActivity">

        <HorizontalScrollView
            android:layout_width="512dp"
            android:layout_height="151dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button1"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/ic_haircut"
                    android:text="Haircut" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/ic_shave"
                    android:text="shave or beard" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/ic_hairspa"
                    android:text="hairspa" />

                <Button
                    android:id="@+id/button4"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/ic_hair_straightner"
                    android:text="hair straightening" />

                <Button
                    android:id="@+id/button5"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/ic_pedicure"
                    android:text="pedicure" />

                <Button
                    android:id="@+id/button6"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/ic_manicure"
                    android:text="Manicure" />

                <Button
                    android:id="@+id/button7"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/ic_waxing"
                    android:text="Waxing" />

                <Button
                    android:id="@+id/button8"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/ic_massage"
                    android:text="Massage" />

                <Button
                    android:id="@+id/button9"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/ic_highlight_color"
                    android:text="highlight color" />

                <Button
                    android:id="@+id/button10"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/ic_baseline_add_circle_outline_24"
                    android:text="ALL"
                    android:textSize="25sp" />


            </LinearLayout>
        </HorizontalScrollView>

        <HorizontalScrollView
            android:layout_width="411dp"
            android:layout_height="115dp">>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="386dp"
                    android:layout_height="100dp"
                    android:background="#ffcdd2"
                    android:text="HAIR CUT"
                    android:paddingLeft="16dp"
                    android:paddingTop="16dp"
                    android:paddingRight="16dp"
                    android:textColor="#212121"
                    android:textSize="30sp"
                    app:fontFamily="@font/arbutus" />
                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="386dp"
                    android:layout_height="100dp"
                    android:paddingLeft="16dp"
                    android:paddingTop="16dp"
                    android:paddingRight="16dp"
                    android:textColor="#212121"
                    android:textSize="30sp"
                    app:fontFamily="@font/arbutus"
                    android:text="Children HairCut(Under 10)" />



                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="386dp"
                    android:layout_height="100dp"
                    android:background="#bbdefb"
                    android:paddingLeft="16dp"
                    android:paddingTop="16dp"
                    android:paddingRight="16dp"
                    android:textColor="#212121"
                    android:textSize="30sp"
                    app:fontFamily="@font/arbutus"
                    android:text="Shaving" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="386dp"
                    android:layout_height="100dp"
                    android:text="Beard Trimming"
                    android:paddingLeft="16dp"
                    android:paddingTop="16dp"
                    android:paddingRight="16dp"
                    android:textColor="#212121"
                    android:textSize="30sp"
                    app:fontFamily="@font/arbutus"
                    />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="386dp"
                    android:layout_height="100dp"
                    android:paddingLeft="16dp"
                    android:paddingTop="16dp"
                    android:paddingRight="16dp"
                    android:textColor="#212121"
                    android:textSize="30sp"
                    app:fontFamily="@font/arbutus"
                    android:background="#ffcdd2"
                    android:text="Styling-Beard/Shave" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="386dp"
                    android:layout_height="100dp"
                    android:paddingLeft="16dp"
                    android:paddingTop="16dp"
                    android:paddingRight="16dp"
                    android:textColor="#212121"
                    android:textSize="30sp"
                    app:fontFamily="@font/arbutus"
                    android:text="Luxury Facial" />

                <Button
                    android:id="@+id/button18"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingLeft="16dp"
                    android:paddingTop="16dp"
                    android:paddingRight="16dp"
                    android:layout_alignTop="@+id/textView"
                    android:layout_alignRight="@id/textView"
                    android:layout_alignBottom="@id/textView"
                    android:drawableRight="@android:drawable/ic_input_add"
                    android:text="ADD" />


                <Button
                    android:id="@+id/button19"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingLeft="16dp"
                    android:paddingTop="16dp"
                    android:paddingRight="16dp"
                    android:layout_alignTop="@+id/textView2"
                    android:layout_alignRight="@id/textView2"
                    android:layout_alignBottom="@id/textView2"
                    android:drawableRight="@android:drawable/ic_input_add"
                    android:text="ADD" />

                <Button
                    android:id="@+id/button20"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingLeft="16dp"
                    android:paddingTop="16dp"
                    android:paddingRight="16dp"
                    android:layout_alignTop="@+id/textView3"
                    android:layout_alignRight="@id/textView3"
                    android:layout_alignBottom="@id/textView3"
                    android:drawableRight="@android:drawable/ic_input_add"
                    android:text="ADD" />

                <Button
                    android:id="@+id/button21"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingLeft="16dp"
                    android:paddingTop="16dp"
                    android:paddingRight="16dp"
                    android:layout_alignTop="@+id/textView4"
                    android:layout_alignRight="@id/textView4"
                    android:layout_alignBottom="@id/textView4"
                    android:drawableRight="@android:drawable/ic_input_add"
                    android:text="ADD" />

                <Button
                    android:id="@+id/button22"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingLeft="16dp"
                    android:paddingTop="16dp"
                    android:paddingRight="16dp"
                    android:layout_alignTop="@+id/textView5"
                    android:layout_alignRight="@id/textView5"
                    android:layout_alignBottom="@id/textView5"
                    android:drawableRight="@android:drawable/ic_input_add"
                    android:text="ADD" />

                <Button
                    android:id="@+id/button23"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingLeft="16dp"
                    android:paddingTop="16dp"
                    android:paddingRight="16dp"
                    android:layout_alignTop="@+id/textView6"
                    android:layout_alignRight="@id/textView6"
                    android:layout_alignBottom="@id/textView6"
                    android:drawableRight="@android:drawable/ic_input_add"
                    android:text="ADD" />

            </RelativeLayout>
        </HorizontalScrollView>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>